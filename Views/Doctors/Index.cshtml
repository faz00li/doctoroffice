@{
    Layout = "_Layout";
}

@model List<DoctorOffice.Models.Doctor>

<h1>Doctor Roster</h1>
<p>@Html.ActionLink("Add New Doctor", "Create")</p>

@if (Model.Count == 0)
{
    <h3>NO DOCTORS IN ROSTER</h3>
}
else
{
    <ul>
        @foreach (var doctor in Model)
        {
            <li>@Html.ActionLink($"{doctor.FirstName} {doctor.LastName}", "Details", new { id = doctor.DoctorId })</li>
        }
    </ul>

}


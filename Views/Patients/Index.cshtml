@{
    Layout = "_Layout";
}

@model List<DoctorOffice.Models.Patient>

<h1>Patient Roster</h1>
<p>@Html.ActionLink("Add New Patient", "Create")</p>

@if (Model.Count == 0)
{
    <h3>NO PATIENTS IN ROSTER</h3>
}
else
{
    <ul>
        @foreach (var patient in Model)
        {
            <li>@Html.ActionLink($"{patient.FirstName} {patient.LastName}", "Details", new { id = patient.PatientId })</li>
        }
    </ul>
}

